{
  "dynamic_templates": [
    {
      "label": {
        "path_match": "label.*",
        "mapping": {
          "type": "text"
        }
      }
    },
    {
      "sortByLabel": {
        "path_match": "sortByLabel.*",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "vocabularyLabel": {
        "path_match": "vocabulary.label.*",
        "mapping": {
          "type": "keyword",
          "index": false
        }
      }
    },
    {
      "altLabel": {
        "path_match": "altLabel.*",
        "mapping": {
          "type": "text",
          "analyzer": "termed"
        }
      }
    },
    {
      "definition": {
        "path_match": "definition.*",
        "mapping": {
          "type": "text",
          "analyzer": "termed"
        }
      }
    }
  ],
  "properties": {
    "id": {
      "type": "keyword"
    },
    "modified": {
      "type": "date"    },
    "broader": {
      "type": "keyword"
    },
    "narrower": {
      "type": "keyword",
      "index": false
    },
    "hasNarrower": {
      "type": "boolean"
    },
    "definedInScheme": {
      "type": "keyword",
      "index": false
    },
    "usedInScheme": {
      "type": "keyword",
      "index": false
    },
    "status": {
      "type": "keyword"
    },
    "uri": {
      "type": "keyword"
    },
    "vocabulary": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "uri": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        }
      }
    }
  }
}
